<h1>Task for the day</h1>
<%= content_tag :div, class: 'main-panel' do %>
  <%= content_tag :div, class: 'wrapper' do %>
    <% @tasks.each do |task| %>
      <%= content_tag :div, class: 'task' do %>
        <%= content_tag :span, task.name, class: 'task_name' %>
        <%=  link_to finish_task_path(task) do %>
          <%= image_tag 'finish-task.png', class: 'action' %>
        <% end %>
        <%=  link_to edit_task_path(task) do %>
          <%= image_tag 'edit-task.png', class: 'action' %>
        <% end %>
        <%=  link_to delete_task_path(task) do %>
          <%= image_tag 'delete-task.png', class: 'action' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <%= link_to 'Add', new_task_path, class: 'button' %>
<% end %>
