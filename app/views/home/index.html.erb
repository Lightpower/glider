
<%= content_tag :div, class: 'main-panel' do %>
  <%= content_tag :div, class: 'wrapper' do %>
    <% @tasks.each do |task| %>
      <%= content_tag :div, class: 'task' do %>
        <%=  link_to edit_task_path(task) do %>
          <%= content_tag :span, task.name, class: 'task_name' %>
        <% end %>
      
        <%=  link_to finish_task_path(task) do %>
          <%= image_tag 'finish-task.png', class: 'action-done' %>
        <% end %>
        <%=  link_to edit_task_path(task) do %>
          <%= image_tag 'edit-task.png', class: 'action-d2' %>
        <% end %>
        <%=  link_to delete_task_path(task) do %>
          <%= image_tag 'delete-task.png', class: 'action-d3' %>
        <% end %>
        
      <% end %>
    <% end %>
  <% end %>
  <div class="link-al">
    <%= link_to 'Add', new_task_path, class: 'button-one' %>
    <%= link_to 'List', tasks_path, class: 'button-two' %>
  </div>
<% end %>
